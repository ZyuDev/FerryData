<div class="modal fade show"
     id="staticBackdrop"
     style="display:block;"
     data-backdrop="static"
     tabindex="-1"
     role="dialog"
     aria-labelledby="staticBackdropLabel"
     aria-modal="true">

    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">@FormTitle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="OnCloseClick">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="font-size: 9pt;">

                <textarea class="form-control form-control-sm" @bind="@JsonData" readonly="readonly" rows="15"></textarea>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-outline-primary" data-dismiss="modal" @onclick="OnCloseClick">OK</button>
            </div>
        </div>
    </div>
</div>